<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <title>{% block title %}Devis & Factures gratuits{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet">
            <link rel="stylesheet" href="{{ asset('fonts/css/all.css') }}" type="text/css" rel="stylesheet">
            <link rel="stylesheet" href="{{ asset('affichefacture.css') }}" type="text/css" rel="stylesheet">
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="shortcut icon" type="image/png" href="{{ asset('images/favicon.png') }}"/>
    </head>
    
  

    <body id="{% block body_id %}{% endblock %}">
      <br>
      {% block header %}
      <div class="container">
        <div class="header clearfix">
          <nav>
            <ul class="nav nav-pills float-right">
              {% if not app.user %}
              <li class="nav-item">
                <a class="nav-link active" href="{{ path('home') }}">Accueil <span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
              </li>
              {% else %}
              <li class="nav-item">
                <a class="nav-link active" href="{{ path('facture_new') }}">Accueil <span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('devis_new') }}">Créer un devis</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('facture_new') }}">Créer une facture</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('facture_index') }}">Mes factures</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('devis_index') }}">Mes devis</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('moncompte') }}">Mon Compte</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
              </li>
              {% endif %}
              <li class="nav-item">
                <a class="nav-link" href="{{ path('contact') }}">Contact</a>
              </li>
            </ul>
          </nav>
         <h3 class="text-muted"><a href="{{ path('home') }}"><img src="{{ asset('images/logo.png') }}" alt="Création de devis &amp; factures" /></a></h3>

        </div>
        </div>
       {% endblock %}

        <main role="main" class="container main">
    {% include 'flash_messages.html.twig' %}

       {% block body %}

       {% endblock %}

       </main>

       {% block footer %}
           <footer class="footer">© Devis et Factures gratuits {{ 'now'|date('Y') }}</footer>
       {% endblock %}


        {% block javascripts %}
         <script src="{{ asset('bootstrap/js/jquery.min.js') }}"></script>
         <script src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script>
        {% endblock %}
    </body>
</html>
