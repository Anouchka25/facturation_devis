{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <h1>Connexion</h1>

<div class="container">
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
 <form action="{{ path('app_login') }}" method="post">
    <div class="form-group">
     <input placeholder="Adresse email ..." required name="username" type="text" class="form-control">
    </div>

    <div class="form-group">
     <input placeholder="Mot de passe ..." required name="password" type="password" class="form-control">
    </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    <div class="form-group">
     <input type="checkbox" name="_remember_me"> Se souvenir de moi
    </div>

  <button type="submit" class="btn btn-primary">Connexion</button>
</form>

 <a href="{{ path('user_registration') }}">Inscription</a>
    </div>

{% endblock %}
